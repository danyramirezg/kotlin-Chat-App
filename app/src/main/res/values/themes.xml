<!--    <style name="AppTheme.NoActionBar">-->
<!--        <item name="windowActionBar">false</item>-->
<!--        <item name="windowNoTitle">true</item>-->
<!--    </style>-->
    <style name="AppTheme">AppTheme</style>
    <style name="StandardButton">
        <item name="android:background">@drawable/standard_button_rounded</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/standard_text_size</item>
    </style>
    <style name="LinkText" parent="TextAppearance.AppCompat.SearchResult.Title">
        <item name="android:textColor">@color/blue</item>
    </style>
    <style name="Text">
        <item name="android:textSize">18sp</item>
    </style>
    <style name="Title">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">20sp</item>
    </style>
    <style name="SendButton">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/standard_text_size</item>
        <item name="android:background">@drawable/send_button_rounded</item>
    </style>
    <style name="ChatBubble">
        <item name="android:textSize">@dimen/chat_text_size</item>
        <item name="minHeight">@dimen/chat_standard_size</item>
        <item name="maxHeight">@dimen/chat_max_size</item>
    </style>

</resources>